<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=0.9" />
  <!-- fontawesome link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- css link here -->
  <!-- css link here -->
  <link rel="stylesheet" href="/css/style.css" />
  <title>Taste Bites</title>
</head>
<body>
  <header class="header">
    <div class="logo">
      <h1><i class="fas fa-utensils"></i>Taste<span>Bites</span></h1>
    </div>
    <nav class="navbar">
      <a href="/">Home</a>
      <a href="/menu">Menu</a>
      <a href="#items">Featured items</a>
    </nav>
    <div class="icons">
      <div id="menu-bar" class="fas fa-bars"></div>
      <div id="cart" class="cart-icon">
        <a href="/cart">
          <!-- show how many products in cart -->
          <i id="cart-count" class="fas fa-cart-plus"><span id="cartCounter">0</span></i>
        </a>
    </div>
    </div>
  </header>

  <div class="home" id="home">
    <div class="center-container">
      <div class="cart-container">
        <div class="payment-container">
            <div class="logo2">
            <h1><i class="fas fa-utensils"></i>Taste<span>Bites</span></h1>
            </div>
            <h2 class="payment-title">Payment Successful<span class="green-circle"><i class="fas fa-check"></i></span></h2>
            <p class="payment-text">Thank you for shopping with us.</p>
            <p class="payment-text">Below are your payment details:</p>
            <!-- create a table for the order -->
            <table class="payment-table">
                <thead>
                    <tr>
                        <th scope="col">Amount Paid</th>
                        <th scope="col">Checkout ID</th>
                        <th scope="col">Payment Number</th>
                        <th scope="col">Payment Status</th>
                        <th scope="col">Date of Payment</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= currency_code %>: <%= amount_paid %></td>
                        <td><%= checkout_request_id %></td>
                        <td><%= msisdn %></td>
                        <td><%= payment_status_description %></td>
                        <td><%= request_date %></td>
                    </tr>
                </tbody>
            </table>
              </div>
      <div class="subtotal">
        <a href="/menu">
        <button href="/menu" class="btn btn-outline-primary btn-lg">Back to Menu</button>
        </a>
    </div>       
        
    </div>
    </div>
  </div>
  <script src="https://cdn.cellulant.africa/js/tingg-checkout-library.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>