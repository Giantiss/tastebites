<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=0.9" />
  <!-- fontawesome link -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
  />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- css link here -->
  <!-- css link here -->
  <link rel="stylesheet" href="/css/style.css" />
  <title>Taste Bites</title>
</head>
<body>
  <header class="header">
    <div class="logo">
      <h1><i class="fas fa-utensils"></i>Taste<span>Bites</span></h1>
    </div>
    <nav class="navbar">
      <a href="/">Home</a>
      <a href="/menu">Menu</a>
      <a href="#items">Featured items</a>
    </nav>
    <div class="icons">
      <div id="menu-bar" class="fas fa-bars"></div>
      <div id="cart" class="cart-icon">
        <a href="/cart">
          <!-- show how many products in cart -->
          <i id="cart-count" class="fas fa-cart-plus"><span id="cartCounter">0</span></i>
        </a>
    </div>
    </div>
  </header>

  <div class="home" id="home">
    <div class="center-container">
      <div class="cart-container">
        <table>
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Subtotal</th>
                  <th>Remove</th>
              </tr>
          </thead>
          <tbody>
              <% cartItems.forEach(function(item) { %>
                  <tr>
                      <td><%= item.title %></td>
                      <td><%= item.quantity %></td>
                      <td><%= item.price %></td>
                      <td><%= (item.quantity * item.price).toFixed(2) %></td>
                      <td>
                          <form method="POST" action="/remove-item">
                              <input type="hidden" name="id" value="<%= item.id %>">
                              <button type="submit" class="btn btn-danger">Remove</button>
                          </form>
                      </td>
                  </tr>
              <% }); %>
              <tr>
                  <td colspan="3">Total:</td>
                  <td><%= totalPrice.toFixed(2) %></td>
                  <td></td> <!-- Empty cell for alignment -->
              </tr>
          </tbody>
      </table>
      <div class="subtotal">
        <a href="/menu">
        <button href="/menu" class="btn btn-outline-primary btn-lg">Back to Menu</button>
        </a>
        <!-- <button id="checkoutButton">Proceed to Checkout</button>  -->
        <a href="/checkout">
        <button class="awesome-checkout-button"></button>
        </a>
    </div>       
        
    </div>
    </div>
  </div>

  
  <script src="https://cdn.cellulant.africa/js/tingg-checkout-library.js"></script>
  <script src="/js/script.js"></script>
</body>
</html>
