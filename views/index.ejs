<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=0.9">
    <!-- font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- css link here -->
    <link rel="stylesheet" href="/css/style.css">
    <title>Taste Bites</title>
</head>
<body>
    <header class="header">
        <div class="logo">
            <h1><i class="fas fa-utensils"></i>Taste<span>Bites</span></h1>
        </div>
        <nav class="navbar">
            <a href="/">Home</a>
            <a href="/menu">Menu</a>
            <a href="#items">Featured items</a>
        </nav>

        <div class="icons">
            <div id="menu-bar" class="fas fa-bars"></div>
            <a href="/cart">
                <div id="cart">
                    <i id="cart-count" class="fas fa-cart-plus"></i>
                </div>
            </a>
        </div>
    </header>
   
    <div class="About">
        <h1>Welcome To TasteBites</h1>
        <div class="main-about">

            <div class="inner-about">
                <div class="about-img">
                    <img src="/images/asset-7.png" alt="">
                </div>
            </div>

            <div class="inner-about">
                <div class="right-content-about">
                    <h3>Welcome</h3>
                    <h2>All In Good Taste <br> Food With TasteBites</h2>

                <button>Read More</button>
                </div>
            </div>
        </div>
    </div>

<!-- menu page start -->
    <div class="our-menu-item">
        <div class="heading-menu" id="items">
            <h3>Browse</h3>
            <h1>Explore Our Menu</h1>
        </div>

        <div class="main-menu">
            <% foods.forEach(function(food) { %>
                <div class="inner-menu">
                    <div class="menu-content">
                    <div class="image-overlay"></div>
                    <img src="<%= food.image %>" alt="<%= food.title %>">
                    <h4><%= food.title %></h4>
                    <div class="menu-star">
                        <h1><span>Kes </span><%= food.price %></h1>
                    </div>
                    </div>
                    <form action="/add-to-cart" method="post">
                        <input type="hidden" name="id" value="<%= food.id %>">
                        <input type="hidden" name="title" value="<%= food.title %>">
                        <input type="hidden" name="price" value="<%= food.price %>">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit" value="add to cart" class="align-self-end btn btn-lg btn-block" style="margin-top: auto; font-size: x-large; color: #8CB560;"><i class="fas fa-cart-plus"></i> Add to Cart</button>
                    </form>
                </div>
                <% }); %>
        </div>

    </div>
<!-- menu page end -->
    
    
   
    <script src="/js/script.js"></script>
</body>
</html>